{{- if eq .chezmoi.os "darwin" -}}
#!/bin/bash

brew bundle --no-lock --file=/dev/stdin <<EOF
# Taps
tap "eth-p/software"
tap "homebrew/bundle"
tap "homebrew/cask"
tap "homebrew/cask-fonts"
tap "homebrew/core"
tap "railwaycat/emacsmacport"
{{- if eq .hostowner "personal" }}
tap "ngrok/ngrok"
{{- end}}

# Packages
brew "bat"
brew "xz"
brew "glib"
brew "chezmoi"
brew "cmake"
brew "coreutils"
brew "direnv"
brew "fd"
brew "unbound"
brew "gnutls"
brew "harfbuzz"
brew "ffmpeg"
brew "findutils"
brew "gcc"
brew "gh"
brew "gnupg"
brew "grip"
brew "pango"
brew "librsvg"
brew "graphviz"
brew "htop"
brew "nmap"
brew "openssl@3"
brew "pandoc"
brew "pinentry-mac"
brew "python@3.10"
brew "pipx"
brew "podman"
brew "pre-commit"
brew "pyenv"
brew "pyenv-virtualenv"
brew "qemu"
brew "ripgrep"
brew "shellcheck"
brew "smartmontools"
brew "subversion"
brew "tmux"
brew "tree"
brew "wget"
brew "z"
brew "zlib"
brew "zsh-syntax-highlighting"
brew "railwaycat/emacsmacport/emacs-mac", args: ["with-native-comp", "without-modules", "with-dbus", "with-emacs-big-sur-icon"]
{{- if eq .hostowner "personal" }}
brew "minimal-racket"
brew "twilio/brew/twilio"
{{- else if eq .hostowner "work" }}
brew "gimme-aws-creds"
{{- end }}

# Casks
cask "font-ibm-plex-serif"
cask "font-source-code-pro"
cask "wkhtmltopdf"
{{- if eq .hostowner "personal" }}
cask "ngrok"
{{- end}}
